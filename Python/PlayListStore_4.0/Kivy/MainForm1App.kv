<CLabel@Label>
	color: 0,0,0,1
<CustomPopup>:
	size_hint: .5,.5
	auto_dismiss: False
	title: "HALO"
	Button:
		text: "Close"
		on_press: root.dismiss()

<Root>:
	orientation: "vertical"
	padding: 10
	spacing: 10

	BoxLayout:
		size_hint_x:.22

		CLabel:
			text: "ALO"
			size_hint_x: .80
		CheckBox:
			on_active: root.clicked(self, self.active)
			size_hint_x: .55

	BoxLayout:
		size_hint_x:.55

		CLabel:
			text: "COLOR"
			size_hint_x: .265
		CheckBox:
			group:"fav"
			value: root.blue
			size_hint_x:.05
		CLabel:
			text:"Blue"
			size_hint_x:.15
		CheckBox:
			group:"fav"
			value: root.red
			size_hint_x:.05
		CLabel:
			text:"Red"
			size_hint_x:.15
		CheckBox:
			group:"fav"
			value: root.green
			size_hint_x:.05
		CLabel:
			text:"Green"
			size_hint_x:.15

	BoxLayout:
		height:30

		BoxLayout:
			size_hint_x: .25

		CLabel:
			text: str(slider_id.value)
		Slider:
			id: slider_id
			min: -100
			max: 100
			value:0
			step:1
		BoxLayout:
			size_hint_x:.25

			CLabel:
				text:"ON\\oFF"
			Switch:
				id: switch_id
				on_active:root.switch_on(self,self.active)
	BoxLayout:
		height: 30

		BoxLayout:
			size_hint_x: .25
			Button:
				text: "Open"
				on_press: root.open()
		BoxLayout:
			size_hint_x: .25

			Spinner:
				text:"First"
				values:"First","Second","3"
				id: spinner_id
				on_text: root.spinner(spinner_id.text)
	BoxLayout:
		height: 30
		BoxLayout:
			size_hint_x: .25
			TabbedPanel:
				do_default_tab:False

				TabbedPanelItem:
					text:"1st"
					Label:
						text:"sone"
				TabbedPanelItem:
					text:"2st"
					Label:
						text:"secod"