#:set font "consolab"

<Root>:
	orientation: "vertical"
	id: Root
	#BACKGROUND
	canvas: 
		Color:
			rgba: .75,.75,.75,1   
		Rectangle:
			pos: self.pos
			size: self.size #BACKGROUND
	BoxLayout:#TOP
		id: top
		size_hint: 1,.1
		padding:2,5,2,15
		#BACKGROUND
		canvas:
			Color:
				rgba: .59,.59,.59,1   
			Rectangle:
				pos: self.pos
				size: self.size

		BoxLayout:#TOP LEFT
			id: top_left
			Button:
				id: clist
				text:"CONTINUATION"
				size_hint: .75,1
				font_size:20
				font_name:font
				#on_release:root.alo(labela)
			Label:
				id:total_viewed 
				text:"Total viewed:230"
				color:0,0,0,1
				font_size: 20
				font_name: font
		
		BoxLayout:#TOP MIDDLE
			size_hint_x:None
			width:200
			Spinner:
				id: select_p
				font_size: 20
				font_name: font
		
		AnchorLayout:#TOP RIGHT
			id: top_right
			anchor_x:"right"	
			TextInput:
				id: PName
				multiline: False
				size_hint_x:None
				width:210
				font_size:22
				hint_text: "Playlist name"
				font_name: font
				opacity: 0
				on_text_validate:root.addP(self, select_p,main)
			Button:
				id: addP
				text:"ADD"
				size_hint_x:None
				width:45
				font_name: font
				on_release: root.addP(PName, select_p,main)
						
	TabbedPanel:#MAIN
		id: main
		do_default_tab: False
		tab_pos : 'top_mid'
		background_image: ""
		background_color: .75,.75,.75,1

<NewP>:
	orientation: "vertical"
	spacing: 10

	BoxLayout:
		size_hint_y: None
		height: 45

		canvas:
			Color:
				rgba: .59,.59,.59,1   
			Rectangle:
				pos: self.pos
				size: self.size
		AnchorLayout:
			anchor_x: "left"
			Button:
				id: addT
				text:"ADD"
				size_hint_x:None
				width:45
				font_name: font
				#on_release: root.addP(PName, select_p)
		AnchorLayout:
			Label:
				id:Tin_playlist 
				text:"Titles in playlist:4"
				color:0,0,0,1
				font_size: 20
				font_name: font
		AnchorLayout:
			anchor_x: "right"

			Button:
				id: delT
				text:"DEL"
				size_hint_x:None
				width:45
				font_name: font
				on_release: root.parent.parent.parent.closeP(root.parent)

	ScrollView:
		BoxLayout:
			id: TList
			orientation: "vertical"